<MenuScreen>:
    canvas.before:
        Color:
            rgba: app.background
        Rectangle:
            size: self.size
            pos: self.pos
    GridLayout:
        rows: 3
        MDBoxLayout:
            orientation: 'horizontal'
            padding: 10, 0, 10, 0
            spacing: 10
            size_hint: 1, 0.7
            Image:
                id: menu_label
                source: 'LABELS/menu_label.png'
                size: self.texture_size
                fit: 'contain'
        MDBoxLayout:
            orientation: 'horizontal'
            padding: 20
            spacing: 10
            size_hint: 1, 0.15
            MDFillRoundFlatIconButton:
                icon: "run-fast"
                text: 'START SET'
                font_size: app.button_size
                md_bg_color: app.button_color
                text_color: app.background
                line_color: app.button_color
                icon_color: app.icon_color
                on_press: root.start_button_pressed()
                size_hint_x: 1
                size_hint_y: 1.5
            MDFillRoundFlatIconButton:
                icon: "weight-lifter"
                text: 'TRAININGS'
                font_size: app.button_size
                md_bg_color: app.button_color
                text_color: app.background
                line_color: app.button_color
                icon_color: app.icon_color
                on_press: root.last_trainings_button_pressed()
                size_hint_x: 1
                size_hint_y: 1.5
        MDBoxLayout:
            orientation: 'horizontal'
            padding: 20
            spacing: 10
            size_hint: 1, 0.15
            MDFillRoundFlatIconButton:
                icon: "chart-line"
                text: 'STATISTICS'
                font_size: app.button_size
                md_bg_color: app.button_color
                text_color: app.background
                line_color: app.button_color
                icon_color: app.icon_color
                on_press: root.statistics_button_pressed()
                size_hint_x: 1
                size_hint_y: 1.5
            MDFillRoundFlatIconButton:
                icon: "close-box-outline"
                text: 'QUIT'
                font_size: app.button_size
                md_bg_color: app.button_color
                text_color: app.background
                line_color: app.button_color
                icon_color: app.icon_color
                on_press: root.quit_app()
                size_hint_x: 1
                size_hint_y: 1.5

<CountdownScreen>:
    canvas.before:
        Color:
            rgba: app.background
        Rectangle:
            size: self.size
            pos: self.pos
    countdown_label: countdown_label
    BoxLayout:
        padding: 40
        orientation: 'vertical'
        Label:
            id: countdown_label
            font_size: app.button_size
            color: app.button_color
            bold: True
            text: f'Start exercising in: {root.countdown}'
        MDFillRoundFlatIconButton:
            id: stop_button
            icon: "pause-octagon-outline"
            text: 'STOP'
            font_size: app.button_size
            md_bg_color: app.icon_color
            text_color: app.button_color
            line_color: app.icon_color
            icon_color: app.background
            size_hint: (0.5, 0.5)
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            on_press: root.stop_button_pressed()
            disabled: True


<StartScreen>:
    canvas.before:
        Color:
            rgba: app.background
        Rectangle:
            size: self.size
            pos: self.pos
    kg_label: kg_label
    reps_label: reps_label
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'LABELS/result_label.png'
            size: self.texture_size
            fit: 'contain'
            size_hint: 1, 2.5
        Label:
            id: kg_label
            text: 'Weight data is being processed!'
            font_size: app.font_size
            canvas.before:
                Color:
                    rgba: app.additional_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        Label:
            id: reps_label
            text: 'Repetition data is being processed!'
            font_size: app.font_size
            canvas.before:
                Color:
                    rgba: app.additional_color2
                Rectangle:
                    size: self.size
                    pos: self.pos
        Label:
            id: time_label
            text: 'Time data is being processed!'
            font_size: app.font_size
            canvas.before:
                Color:
                    rgba: app.additional_color3
                Rectangle:
                    size: self.size
                    pos: self.pos
        Label:
            text: 'Enter exercise name below:'
            text_color: app.background
            font_size: app.font_size
            canvas.before:
                Color:
                    rgba: app.additional_color4
                Rectangle:
                    size: self.size
                    pos: self.pos
        TextInput:
            id: exercise_name_input
            hint_text: ' '
            font_size: app.font_size
            foreground_color: app.button_color
            background_color: app.background
            halign: 'center'
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            disabled: True
        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5
            MDFillRoundFlatIconButton:
                id: save_button
                icon: "content-save"
                text: 'SAVE'
                font_size: app.button_size
                md_bg_color: app.dark_green
                text_color: app.button_color
                line_color: app.dark_green
                icon_color: app.button_color
                size_hint: 0.5, 1
                on_press: root.save_button_pressed()
                disabled: True
            MDFillRoundFlatIconButton:
                id: back_button
                icon: "arrow-left-thin"
                text: 'BACK'
                font_size: app.button_size
                md_bg_color: app.button_color
                text_color: app.background
                line_color: app.button_color
                icon_color: app.icon_color
                size_hint: 0.5, 1
                on_press: root.go_back_to_menu()
                disabled: True
            MDFillRoundFlatIconButton:
                id: next_button
                icon: "arrow-right-thin"
                text: 'NEXT SET'
                font_size: app.button_size
                md_bg_color: app.button_color
                text_color: app.background
                line_color: app.button_color
                icon_color: app.icon_color
                size_hint: 0.5, 1
                on_press: root.go_to_next_set()
                disabled: True
<LastTrainingScreen>:
    canvas.before:
        Color:
            rgba: app.background
        Rectangle:
            size: self.size
            pos: self.pos
    MDBoxLayout:
        orientation: 'vertical'
        padding: 15
        scalping: 10
        Image:
            source: 'LABELS/training_label.png'
            size: self.texture_size
            fit: 'contain'
            size_hint: 1, 0.7
        ScrollView:
            MDList:
                id: container
                spacing: 2

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.1

        MDFillRoundFlatIconButton:
            icon: "arrow-left-thin"
            text: 'BACK TO MENU'
            font_size: app.button_size
            md_bg_color: app.button_color
            text_color: app.background
            line_color: app.button_color
            icon_color: app.icon_color
            size_hint: 1, 0.2
            on_press: root.go_back_to_menu()

<StatisticsScreen>:

    canvas.before:
        Color:
            rgba: app.background
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        padding: 15
        Image:
            source: 'LABELS/statistics_label.png'
            size: self.texture_size
            fit: 'contain'
            size_hint: 1, 0.7

        ScrollView:
            MDList:
                id: statistics_container
                spacing: 2

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.1

        MDFillRoundFlatIconButton:
            icon: "keyboard-backspace"
            text: 'BACK TO MENU'
            font_size: app.button_size
            md_bg_color: app.button_color
            text_color: app.background
            line_color: app.button_color
            icon_color: app.icon_color
            size_hint: 1, 0.2
            on_press: root.go_back_to_menu()